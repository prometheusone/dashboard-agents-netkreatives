{
  "name": "mission-control-dashboard",
  "version": "1.0.0",
  "description": "Unified Mission Control Dashboard - Tasks, Chat, Agent Status",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/server.ts --target bun --outdir dist",
    "start": "bun run src/server.ts",
    "build:frontend": "cd frontend && bun run build",
    "dev:frontend": "cd frontend && bun run dev"
  },
  "keywords": ["mission-control", "dashboard", "agents"],
  "author": "Netkreatives",
  "license": "UNLICENSED",
  "dependencies": {
    "hono": "^4.6.14",
    "convex": "^1.18.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.13",
    "bun-types": "latest"
  }
}
